<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationExercise Suite">
    <listeners>
        <listener class-name="Pages.ExtentReportListener"/>
    </listeners>

    <!-- Scenario - Chrome -->
    <test name="Scenario - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Tests.Scenario1Test"/>
            <class name="Tests.Scenario2Test"/>
            <class name="Tests.Scenario3Test"/>
            <class name="Tests.Scenario4Test"/>
            <class name="Tests.Scenario5Test"/>
        </classes>
    </test>

    <!-- Scenario - Firefox -->
