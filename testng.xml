<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
    <suite name="AutomationExercise Suite" parallel="tests" thread-count="3">
        <test name="Scenario1 - Chrome">
            <parameter name="browser" value="chrome"/>
            <classes>
                <class name="Tests.Scenario1Test"/>
            </classes>
        </test>
        <test name="Scenario1 - Firefox">
            <parameter name="browser" value="firefox"/>
            <classes>
                <class name="Tests.Scenario1Test"/>
            </classes>
        </test>

        <test name="Scenario1 - Edge">
            <parameter name="browser" value="edge"/>
            <classes>
                <class name="Tests.Scenario1Test"/>
            </classes>
        </test>

        <test name="Scenario2 - Chrome">
            <parameter name="browser" value="chrome"/>
            <classes>
                <class name="Tests.Scenario2Test"/>
            </classes>
        </test>
        <test name="Scenario2 - Firefox">
            <parameter name="browser" value="firefox"/>
            <classes>
                <class name="Tests.Scenario2Test"/>
            </classes>
        </test>
        <test name="Scenario2 - Edge">
            <parameter name="browser" value="edge"/>
            <classes>
                <class name="Tests.Scenario2Test"/>
            </classes>
        </test>
    </suite>